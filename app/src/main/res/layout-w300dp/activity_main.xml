<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context=".MainActivity">
    <Button
            android:text="@string/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/four_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/five_button"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seven_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/one_button"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <Button
            android:text="@string/minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/minus_button"
            app:layout_constraintStart_toEndOf="@+id/six_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divide_button" app:layout_constraintBottom_toTopOf="@+id/plus_button"
    />
    <Button
            android:text="@string/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/five_button"
            app:layout_constraintStart_toEndOf="@+id/four_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/six_button"
            app:layout_constraintTop_toBottomOf="@+id/eight_button"
            app:layout_constraintBottom_toTopOf="@+id/two_button"
    />
    <Button
            android:text="@string/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/nine_button"
            app:layout_constraintStart_toEndOf="@+id/eight_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/divide_button"
            app:layout_constraintTop_toBottomOf="@+id/delete_button" app:layout_constraintBottom_toTopOf="@+id/six_button"
    />
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button15"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/seven_button"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="100dp" android:text="@string/clear"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="@string/multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/multiply_button"
            app:layout_constraintStart_toEndOf="@+id/delete_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="100dp"
            app:layout_constraintBottom_toTopOf="@+id/divide_button"/>
    <Button
            android:text="@string/clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button15"
            app:layout_constraintStart_toEndOf="@+id/button13"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/delete_button"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/eight_button"/>
    <Button
            android:text="@string/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/delete_button"
            app:layout_constraintStart_toEndOf="@+id/button15" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/multiply_button"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/nine_button"/>
    <Button
            android:text="@string/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/six_button"
            app:layout_constraintStart_toEndOf="@+id/five_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/minus_button"
            app:layout_constraintTop_toBottomOf="@+id/nine_button"
            app:layout_constraintBottom_toTopOf="@+id/three_button"
    />
    <Button
            android:text="@string/divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/divide_button"
            app:layout_constraintStart_toEndOf="@+id/nine_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multiply_button" app:layout_constraintBottom_toTopOf="@+id/minus_button"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/eight_button"
            app:layout_constraintStart_toEndOf="@+id/seven_button"
            app:layout_constraintEnd_toStartOf="@+id/nine_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/five_button" app:layout_constraintTop_toBottomOf="@+id/button15"
    />
    <Button
            android:text="@string/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/seven_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eight_button" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button13"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/four_button"
    />
    <Button
            android:text="@string/plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/plus_button" app:layout_constraintStart_toEndOf="@+id/three_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minus_button" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/three_button" app:layout_constraintStart_toEndOf="@+id/two_button"
            app:layout_constraintEnd_toStartOf="@+id/plus_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/six_button" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/two_button"
            app:layout_constraintStart_toEndOf="@+id/one_button" app:layout_constraintEnd_toStartOf="@+id/three_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/five_button" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/one_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/two_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four_button" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>