<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/minus"
            android:textColor="@color/operations"
            android:onClick="onClickSub"
            android:layout_height="wrap_content"
            android:id="@+id/button31"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button35"
            app:layout_constraintStart_toEndOf="@+id/button36"
            android:layout_width="0dp"/>
    <Button
            android:text="@string/six"
            android:onClick="onClick6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button32"
            app:layout_constraintStart_toEndOf="@+id/button33"
            app:layout_constraintEnd_toStartOf="@+id/button35"
            app:layout_constraintBottom_toTopOf="@+id/button28"/>
    <Button
            android:text="@string/five"
            android:onClick="onClick5"
            android:layout_height="wrap_content"
            android:id="@+id/button33"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/button34"
            app:layout_constraintEnd_toStartOf="@+id/button32" app:layout_constraintBottom_toTopOf="@+id/button29"/>
    <Button
            android:text="@string/four"
            android:onClick="onClick4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button34"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button33"
            app:layout_constraintBottom_toTopOf="@+id/button30"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="@string/plus"
            android:onClick="onClickPlus"
            android:layout_width="0dp"
            android:textColor="@color/operations"
            android:id="@+id/button35"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/button32"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/button27"/>
    <Button
            android:text="@string/three"
            android:layout_height="wrap_content"
            android:onClick="onClick3"
            android:id="@+id/button36"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/button37"
            app:layout_constraintBottom_toTopOf="@+id/button32"
            app:layout_constraintEnd_toStartOf="@+id/button31" android:fontFamily="@font/roboto_thin"/>
    <Button
            android:text="@string/two"
            android:onClick="onClick2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button37"
            app:layout_constraintEnd_toStartOf="@+id/button36"
            app:layout_constraintStart_toEndOf="@+id/button38"
            app:layout_constraintBottom_toTopOf="@+id/button33"/>
    <Button
            android:text="@string/one"
            android:onClick="onClick1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button38"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button37"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/button34"/>
    <Button
            android:text="@string/cross"
            android:onClick="onClickx"
            android:textColor="@color/operations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button27"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button26" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/button28"
    />
    <Button
            android:text="@string/nine"
            android:onClick="onClick9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button28"
            app:layout_constraintEnd_toStartOf="@+id/button27"
            app:layout_constraintBottom_toTopOf="@+id/button23"
            app:layout_constraintStart_toEndOf="@+id/button29"/>
    <Button
            android:text="@string/eight"
            android:onClick="onClick8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button29"
            app:layout_constraintEnd_toStartOf="@+id/button28"
            app:layout_constraintBottom_toTopOf="@+id/button24"
            app:layout_constraintStart_toEndOf="@+id/button30"/>
    <Button
            android:text="@string/seven"
            android:onClick="onClick7"
            android:layout_height="wrap_content"
            android:id="@+id/button30"
            android:layout_width="0dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button25"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintEnd_toStartOf="@+id/button29"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/slash"
            android:onClick="onClickDiv"
            android:layout_width="0dp"
            android:textColor="@color/operations"
            android:layout_height="wrap_content"
            android:id="@+id/button26"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button23"/>
    <Button
            android:text="@string/equal"
            android:onClick="onClickEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            app:layout_constraintEnd_toStartOf="@+id/button26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button24"/>
    <Button
            android:text="@string/zero"
            android:onClick="onClick0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button24"
            app:layout_constraintEnd_toStartOf="@+id/button23"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button25"/>
    <Button
            android:text="@string/dot"
            android:onClick="onClickDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button24"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:singleLine="false"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textSize="50sp" android:lineSpacingExtra="12sp"
            android:layout_marginTop="125dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/delete"
            android:longClickable="true"
            android:onClick="onClickDel"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDel"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button31" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="@string/clear"
            android:onClick="onClickC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:textSize="25sp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintEnd_toStartOf="@+id/buttonDel"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button38"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
</androidx.constraintlayout.widget.ConstraintLayout>